@model Forma1.Models.Csapat

@{
    ViewData["Title"] = "Modify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nev" class="control-label"></label>
                <input asp-for="Nev" class="form-control"/>
                <span asp-validation-for="Nev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alapitas" class="control-label"></label>
                <input asp-for="Alapitas" class="form-control" />
                <span asp-validation-for="Alapitas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bajnoksagok" class="control-label"></label>
                <input asp-for="Bajnoksagok" class="form-control" />
                <span asp-validation-for="Bajnoksagok" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fizetes" /> @Html.DisplayNameFor(model => model.Fizetes)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Lista">Vissza a listához</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
